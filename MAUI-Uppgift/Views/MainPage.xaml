<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MAUI_Uppgift.Views" 
             xmlns:controllers="clr-namespace:MAUI_Uppgift.Views.Controls" 
             xmlns:viewmodels="clr-namespace:MAUI_Uppgift.ViewModels" x:DataType="viewmodels:StandingViewModel"
             x:Class="MAUI_Uppgift.Views.MainPage"
             Title="{Binding Title}">


    <Grid RowDefinitions="auto, *">

        
        <views:StandingsView Grid.Row="1"/>

        <controllers:BusyOverlay IsBusy="{Binding IsBusy}"
                                 ImageSource="nhl_logo.png"
                                 ImageSize="48"
                                 Grid.RowSpan="2"/>
        <controllers:ErrorControl HasError="{Binding HasError}"
                                  ErrorMessage="{Binding ErrorMessage}"
                                  Grid.RowSpan="2"/>

    </Grid>
</ContentPage>
