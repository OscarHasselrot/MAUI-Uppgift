<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Uppgift.Views.Controls.ErrorControl"
             x:Name="Root">
    <Grid IsVisible="{Binding HasError, Source={x:Reference Root}}"
          HorizontalOptions="Fill"
          VerticalOptions="Fill"
          InputTransparent="False">
        <Label Text="{Binding ErrorMessage, Source={x:Reference Root}}"
               IsVisible="{Binding HasError, Source={x:Reference Root}}"
               TextColor="Red"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               Margin="10,5"/>
    </Grid>
</ContentView>
